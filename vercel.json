{
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "dist/main.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/main.js"
    },
    {
      "src": "/docs/(.*)",
      "dest": "dist/main.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "installCommand": "pnpm install --no-frozen-lockfile && npx prisma generate",
  "buildCommand": "pnpm run build:prod",
  "env": {
    "NODE_ENV": "production"
  }
}
