{
  "version": 2,
  "outputDirectory": "dist",
  "installCommand": "pnpm install --no-frozen-lockfile && pnpm exec prisma generate",
  "buildCommand": "pnpm build:prod",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}
