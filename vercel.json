{
  "version": 2,
  "builds": [
    {
      "src": "dist/main.js",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "pnpm build:prod",
        "outputDirectory": "dist",
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/main.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ],
  "installCommand": "pnpm install --no-frozen-lockfile && pnpm exec prisma generate",
  "env": {
    "NODE_ENV": "production"
  }
}
